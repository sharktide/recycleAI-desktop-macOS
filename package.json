{
  "name": "RecycleAI",
  "version": "1.2.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --mac"
  },
  "build": {
    "appId": "com.sharktide.RecycleAI",
    "productName": "RecycleAI macOS",
    "files": [
      "**/*",
      "dist/**/*",
      "index.html",
      "main.js",
      "scripts.js",
      "styles.css"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dir"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  }
}
